<UserControl x:Class="EmadAdel.Redemption_Team.Controls.Path"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:EmadAdel.Redemption_Team.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="Transparent">

    <Grid Margin="20" Background="Transparent">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="30" Width="459" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="PathContent">

            <!-- Path Block -->
            <TextBlock Text="Red Dead Redemption 2 اختار المسار الصحيح"
                 Foreground="White"
                 FontWeight="Medium"
                 FontSize="15"
                 Margin="10"/>

            <DockPanel LastChildFill="True">

                <TextBox x:Name="InstallPathTextBox"
                         Text="E:\Red Dead Redemption 2"
                         Height="32"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"
                         Foreground="White"
                         BorderBrush="Transparent"/>

                <Button Content="..."
                        Width="45"
                        Click="BrowseButton_Click"
                        Margin="8,0,0,0"
                        BorderThickness="0"/>
            </DockPanel>

     
        </StackPanel>
        
        <!-- Bottom -->
        <Grid Grid.Row="2" Margin="0">
            <Button  x:Name="installBtn"
            Content="تثبيت"
            Width="100"
            Click="InstallBtn_Click"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Height="35"/>
        </Grid>


        <Border x:Name="ProgressBar" Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Collapsed">

            <controls:ProgressBar x:Name="DownloadProgressBar" />

        </Border>

    </Grid>
</UserControl>
