<UserControl x:Class="Redemption_Team.page.InstallerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="Transparent">

    <Grid Margin="30">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="30" HorizontalAlignment="Left">

            <TextBlock Text="مسار اللعبة"
                       FontSize="15"
                       FontWeight="SemiBold"
                       FontFamily="arial"
                       Foreground="White"
                       Margin="0,0,0,8"/>

            <DockPanel LastChildFill="True">

                <TextBox x:Name="InstallPathTextBox"
                         Text="C:\Program Files\Rockstar Games\Red Dead Redemption 2"
                         Height="32"
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"
                         Foreground="White"
                         BorderBrush="Transparent"/>

                <Button Content="..."
                        Width="45"
                        Click="BrowseButton_Click"
                        Margin="8,0,0,0"
                        BorderThickness="0"/>
            </DockPanel>

            <TextBlock Text="Red Dead Redemption 2 يرجى اختيار المسار الصحيح للعبة"
                       Foreground="#AAAAAA"
                       FontSize="13"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <Button Content="تثبيت"
                Width="120"
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Grid.Row="3"
                BorderThickness="0"/>
    </Grid>
</UserControl>
