<UserControl x:Class="Emadadel.Redemption_Team.path.InstallerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="Transparent">

    <Grid Margin="20" Background="Transparent">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="30" Width="500" HorizontalAlignment="Left">

            <!-- Path Block -->
            <TextBlock Text="مسار اللعبة"
                       FontSize="15"
                       FontWeight="SemiBold"
                       FontFamily="arial"
                       Foreground="White"
                       Margin="0,0,0,8"/>

            <DockPanel LastChildFill="True">

                <TextBox x:Name="InstallPathTextBox"
                         Text="C:\Program Files\Rockstar Games\Red Dead Redemption 2"
                         Height="32"
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"
                         Foreground="White"
                         BorderBrush="Transparent"/>

                <Button Content="..."
                        Width="45"
                        Click="BrowseButton_Click"
                        Margin="8,0,0,0"
                        BorderThickness="0"/>
            </DockPanel>

            <!--Tip Text-->
            <TextBlock Text="Red Dead Redemption 2 يرجى اختيار المسار الصحيح للعبة"
                       Foreground="#AAAAAA"
                       FontSize="13"
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Bottom -->
        <Grid Grid.Row="2" Margin="0">
            <Button 
            Content="تثبيت"
            Width="100"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Height="35"/>
        </Grid>
        
    </Grid>
</UserControl>
